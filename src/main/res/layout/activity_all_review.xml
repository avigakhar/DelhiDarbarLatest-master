<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/rl_imageView"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv__userName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/pop_bold"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_phone_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/pop_regular"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/tv_changeLanguage"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/button_less_round_shape_light_grey"
                            android:backgroundTint="@color/un_select_dashboard"
                            android:gravity="center"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:text="@string/change_language"
                            android:fontFamily="@font/pop_regular"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight=".5">

                            <TextView
                                android:id="@+id/tv_editProfile"
                                android:layout_width="95dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/button_less_round_shape_light_grey"
                                android:backgroundTint="@color/un_select_dashboard"
                                android:gravity="center"
                                android:text="@string/edit"
                                android:fontFamily="@font/pop_regular"
                                android:textColor="@android:color/white"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_weight=".5">

                            <TextView
                                android:id="@+id/tv_logout"
                                android:layout_width="95dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/border"
                                android:gravity="center"
                                android:text="@string/sign_out"
                                android:fontFamily="@font/pop_regular"
                                android:textColor="@android:color/black"
                                android:textStyle="bold" />

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_imageView"
                android:layout_width="@dimen/_65sdp"
                android:layout_height="90dp"
                android:layout_centerVertical="true">

                <ProgressBar
                    android:id="@+id/pb_userImageLoading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone" />

                <com.app.delhidarbar.utils.rounded_iv.RoundedImageView
                    android:id="@+id/id_imageUser"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/no_profile_image"
                    app:riv_border_width="1dip"
                    app:riv_border_color="@color/colorWhite"
                    app:riv_corner_radius="@dimen/_4sdp" />

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_ol_lyts"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_centerInParent="true"
                    android:minWidth="@dimen/_40sdp">

                    <TextView
                        android:id="@+id/tv_orders"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_less_round_shape_light_grey"
                        android:gravity="center"
                        android:text="@string/orders"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:textColor="@color/un_select_dashboard"
                        android:textSize="@dimen/SmallTextSize"
                        android:fontFamily="@font/pop_bold" />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_centerInParent="true"
                    android:minWidth="@dimen/_40sdp">

                    <TextView
                        android:id="@+id/tv_reviews"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:text="@string/reviews"
                        android:textColor="@color/black"
                        android:textSize="@dimen/SmallTextSize"
                        android:fontFamily="@font/pop_bold" />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_centerInParent="true"
                    android:minWidth="@dimen/_40sdp">

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="@string/addresses"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/SmallTextSize"
                        android:fontFamily="@font/pop_bold" />

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/cv_cardView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="10dp"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerInParent="true"
                        android:background="#f5f5f5"/>

                    <TextView
                        android:id="@+id/tv_addIcon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/icon"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/pop_bold"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_19ssp" />

                </RelativeLayout>

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_all_review"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/cv_cardView"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        </RelativeLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/pb_progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:visibility="gone" />

</RelativeLayout>