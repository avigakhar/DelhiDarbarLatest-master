<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lay_back"
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/bg_imageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:foreground="@drawable/transparent"
                        android:paddingTop="24dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/profile_bg" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="24dp">

                        <ImageView
                            android:id="@+id/img_back"
                            android:layout_width="@dimen/_31sdp"
                            android:layout_height="@dimen/_31sdp"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:layout_marginEnd="@dimen/_74sdp"
                            android:layout_marginBottom="@dimen/_6sdp"
                            android:src="@drawable/ic_navigate_before_black_24dp"
                            android:tint="@android:color/white" />

                        <RelativeLayout
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_gravity="center|bottom">

                            <RelativeLayout
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_centerInParent="true">

                                <com.app.delhidarbar.utils.rounded_iv.RoundedImageView
                                    android:id="@+id/img_user_image"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:layout_centerInParent="true"
                                    android:scaleType="centerCrop"
                                    app:riv_border_width="1dip"
                                    app:riv_corner_radius="95dp" />

                                <ProgressBar
                                    android:id="@+id/pb_progressBarEdtiProfile"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:theme="@style/MyWhiteDialog" />

                            </RelativeLayout>

                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/img_camera"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="bottom|center"
                            android:scaleType="fitCenter"
                            android:src="@drawable/profilephoto" />

                    </FrameLayout>

                    <ImageView
                        android:id="@+id/img_bg_camera"
                        android:layout_width="@dimen/_31sdp"
                        android:layout_height="@dimen/_31sdp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="50dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/camera" />

                </RelativeLayout>


            </LinearLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:background="@drawable/button_less_round_shape_light_grey">

                        <EditText
                            android:id="@+id/edt_userNameFnln"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:background="@null"
                            android:fontFamily="@font/pop_regular"
                            android:gravity="start|center"
                            android:hint="User Name"
                            android:inputType="text"
                            android:imeOptions="actionDone"
                            android:singleLine="true"
                            android:textColor="@color/place_order"
                            android:textSize="@dimen/_12ssp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:background="@drawable/button_less_round_shape_light_grey">

                        <EditText
                            android:id="@+id/edt_email"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:background="@null"
                            android:focusable="false"
                            android:inputType="textEmailAddress"
                            android:fontFamily="@font/pop_regular"
                            android:gravity="start|center"
                            android:hint="Email"
                            android:singleLine="true"
                            android:textColor="@color/place_order"
                            android:textSize="@dimen/_12ssp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:background="@drawable/button_less_round_shape_light_grey">


                        <EditText
                            android:id="@+id/edt_phoneNumber"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:background="@null"
                            android:fontFamily="@font/pop_regular"
                            android:gravity="start|center"
                            android:hint="Phone"
                            android:maxLength="9"
                            android:inputType="number"
                            android:textColor="@color/place_order"
                            android:textSize="@dimen/_12ssp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:background="@drawable/button_less_round_shape_light_grey"
                        android:visibility="gone">

                        <EditText
                            android:id="@+id/edt_address"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:background="@null"
                            android:focusable="false"
                            android:fontFamily="@font/pop_regular"
                            android:gravity="start|center"
                            android:hint="Location"
                            android:inputType="text"
                            android:textColor="@color/place_order"
                            android:textSize="@dimen/_12ssp"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="40dp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:visibility="gone"
                        android:background="@drawable/bg_button"
                        android:backgroundTint="@color/menu_color">

                        <TextView
                            android:id="@+id/tv_changeLanguage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:fontFamily="@font/pop_bold"
                            android:gravity="center"
                            android:text="@string/change_language"
                            android:textAllCaps="true"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/NormalTextSize" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="40dp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:background="@drawable/bg_button"
                        android:backgroundTint="@color/menu_color">

                        <TextView
                            android:id="@+id/tv_done"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:fontFamily="@font/pop_bold"
                            android:gravity="center"
                            android:text="@string/save"
                            android:textAllCaps="true"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/NormalTextSize" />

                    </RelativeLayout>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/pb_apiProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:theme="@style/MyAlertDialogStyle"
            android:visibility="gone" />

    </RelativeLayout>

</ScrollView>