<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout4"
    android:layout_width="match_parent"
    android:background="@drawable/background_login"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".view.fragments.LoginFragment">

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="@dimen/_31sdp"
                    android:layout_height="@dimen/_31sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="24dp"
                    android:src="@drawable/ic_navigate_before_black_24dp" />
                
                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/abril_font"
                    android:gravity="center"
                    android:text="@string/Login"
                    android:textColor="@color/black"
                    android:textSize="@dimen/TitleTextSize" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="40dp"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tab_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="bottom"
                        app:hintEnabled="false"
                        app:hintTextAppearance="@style/TextLabel">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_email"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/ButtonSize"
                            android:background="@drawable/custom_login_edittxt"
                            android:drawableLeft="@drawable/ic_person_outline_black_24dp"
                            android:drawablePadding="8dp"
                            android:fontFamily="@font/pop_regular"
                            android:gravity="center_vertical"
                            android:imeOptions="actionDone"
                            android:maxLines="1"
                            android:hint="@string/email"
                            android:textColorHint="@color/hint_color"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:singleLine="true"
                            android:textColor="@color/edit_text_color"
                            android:textSize="@dimen/NormalTextSize" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tab_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        app:hintEnabled="false"
                        app:hintTextAppearance="@style/TextLabel"
                        app:passwordToggleDrawable="@drawable/toggle"
                        app:passwordToggleEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_password"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/ButtonSize"
                            android:background="@drawable/custom_login_edittxt"
                            android:drawableStart="@drawable/ic_lock_outline_black_24dp"
                            android:drawablePadding="8dp"
                            android:fontFamily="@font/pop_regular"
                            android:gravity="center_vertical"
                            android:inputType="textPassword"
                            android:hint="@string/password"
                            android:textColorHint="@color/hint_color"
                            android:maxLines="1"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:textSize="@dimen/NormalTextSize" />

                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <Button
                                    android:id="@+id/btn_login"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/ButtonSize"
                                    android:layout_marginTop="30dp"
                                    android:layout_marginLeft="70dp"
                                    android:layout_marginRight="70dp"
                                    android:background="@drawable/button_round_shape"
                                    android:fontFamily="@font/pop_bold"
                                    android:text="@string/Login"
                                    android:textStyle="bold"
                                    android:textColor="@color/button_color" />

                                <TextView
                                    android:id="@+id/tv_forgetPassword"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginLeft="70dp"
                                    android:layout_marginRight="70dp"
                                    android:fontFamily="@font/pop_regular"
                                    android:gravity="center"
                                    android:text="@string/Forgot_password"
                                    android:textColor="@color/graycolor" />

                                <TextView
                                    android:id="@+id/textView2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:fontFamily="@font/pop_regular"
                                    android:gravity="center"
                                    android:layout_marginLeft="70dp"
                                    android:layout_marginRight="70dp"
                                    android:text="@string/Or"
                                    android:textAllCaps="true"
                                    android:textColor="@color/textcolor" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="70dp"
                                    android:layout_marginRight="70dp"
                                    android:visibility="visible">

                                    <Button
                                        android:id="@+id/fb"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/ButtonSize"
                                        android:layout_marginTop="20dp"
                                        android:alpha="0.90"
                                        android:background="@drawable/facebook_bg"
                                        android:drawableTint="#4267b2"
                                        android:fontFamily="@font/pop_bold"
                                        android:onClick="onClick"
                                        android:textStyle="bold"
                                        android:text="FaceBook"
                                        android:textColor="@color/colorWhite" />

                                    <com.facebook.login.widget.LoginButton
                                        android:id="@+id/dacebook_button"
                                        android:layout_width="match_parent"
                                        android:background="@drawable/facebook_bg"
                                        android:layout_height="@dimen/ButtonSize"
                                        android:layout_below="@id/fb"
                                        android:layout_marginTop="@dimen/_31sdp"
                                        android:visibility="gone" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="70dp"
                                    android:layout_marginRight="70dp">

                                    <Button
                                        android:id="@+id/btn_gmail"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/ButtonSize"
                                        android:layout_marginTop="20dp"
                                        android:alpha="0.80"
                                        android:background="@drawable/googe_sign_in"
                                        android:fontFamily="@font/pop_bold"
                                        android:text="Google"
                                        android:textStyle="bold"
                                        android:textColor="@color/colorWhite" />

                                    <com.google.android.gms.common.SignInButton
                                        android:id="@+id/sign_in_button"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/ButtonSize"
                                        android:layout_marginTop="20dp"
                                        android:background="@drawable/googe_sign_in"
                                        android:visibility="gone" />

                                </RelativeLayout>

                                <TextView
                                    android:id="@+id/txt_privacyPolicy"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/ButtonSize"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="35dp"
                                    android:fontFamily="@font/pop_regular"
                                    android:gravity="center"
                                    android:text="@string/agree_to_our"
                                    android:textColor="@color/edit_text_color"
                                    android:textSize="@dimen/SmallTextSize" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

<!--
                    <TextView
                        android:id="@+id/tv_dont_have_account"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/ButtonSize"
                        android:layout_gravity="center"
                        android:layout_marginTop="90dp"
                        android:layout_marginBottom="35dp"
                        android:fontFamily="@font/pop_regular"
                        android:gravity="center"
                        android:text="@string/dont_have_account"
                        android:textColor="@color/edit_text_color"
                        android:textSize="@dimen/NormalTextSize" />
-->

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/tv_dont_have_account"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/ButtonSize"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/pop_regular"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:text="@string/dont_have_account"
        android:textColor="@color/edit_text_color"
        android:textSize="@dimen/NormalTextSize" />

</RelativeLayout>

